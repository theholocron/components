{
  "display": "Bootstrap Bundle",
  "extends": "@tsconfig/node-lts/tsconfig.json",
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "declarationMap": true,
    "jsx": "preserve"
  },
  "include": ["./src/**/*.ts"],
  "exclude": [
    "./node_modules",
    "**/*.test.ts"
  ]
}
